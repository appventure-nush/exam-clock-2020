<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<StackPane prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sg.edu.appventure.examclock.ConnectionController">
    <VBox>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <Label text="Create Key"/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <JFXRadioButton fx:id="typeAdmin" selected="true" text="Administrator">
                <toggleGroup>
                    <ToggleGroup fx:id="keyTypeGroup"/>
                </toggleGroup>
            </JFXRadioButton>
            <JFXRadioButton fx:id="typeToilet" text="Toilet Controller">
                <toggleGroup>
                    <fx:reference source="keyTypeGroup"/>
                </toggleGroup>
            </JFXRadioButton>
            <JFXRadioButton fx:id="typeRead" text="Read Only">
                <toggleGroup>
                    <fx:reference source="keyTypeGroup"/>
                </toggleGroup>
            </JFXRadioButton>
            <JFXButton onAction="#create" fx:id="createKey" styleClass="primary-raised" text="Create"/>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
        <JFXListView fx:id="keys" prefHeight="300.0" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox fx:id="infoPane" styleClass="opaque">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <Label text="Key Details"/>
        <GridPane VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
            </rowConstraints>
            <Label text="Key ID"/>
            <Label fx:id="keyID" text="TEST" GridPane.columnIndex="1">
                <font>
                    <Font name="Courier New" size="13.0"/>
                </font>
            </Label>
            <Label text="Type" GridPane.rowIndex="1"/>
            <Label fx:id="keyType" text="TEST" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font>
                    <Font name="Courier New" size="13.0"/>
                </font>
            </Label>
            <Label text="QR Code" GridPane.rowIndex="2"/>
            <JFXButton onAction="#showQRCode" styleClass="primary-raised" text="Show QR Code" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
            <Label text="Key (Base64)" GridPane.rowIndex="3"/>
            <TextArea fx:id="keyRaw" editable="false" minWidth="-Infinity" prefWidth="300.0" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <ToolBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                <JFXButton onAction="#delete" text="Delete">
                    <styleClass>
                        <String fx:value="primary-raised"/>
                        <String fx:value="red"/>
                    </styleClass>
                </JFXButton>
                <JFXButton cancelButton="true" onAction="#cancel" text="Cancel"/>
            </ToolBar>
        </GridPane>
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
    </VBox>
</StackPane>
