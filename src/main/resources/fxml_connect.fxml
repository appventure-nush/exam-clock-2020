<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="app.nush.examclock.controllers.ConnectionController" spacing="5.0">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="5.0">
        <Button onAction="#reconnect" mnemonicParsing="false" text="Connect"/>
        <Button onAction="#forceExamUpdate" mnemonicParsing="false" text="Refresh"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Label alignment="CENTER_RIGHT" maxWidth="Infinity" text="Clock ID:" HBox.hgrow="ALWAYS"/>
        <TextField fx:id="clockIDLabel" editable="false" prefWidth="150"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Label alignment="CENTER_RIGHT" maxWidth="Infinity" text="Clock Name:" HBox.hgrow="ALWAYS"/>
        <TextField fx:id="clockNameLabel" prefWidth="150"/>
    </HBox>
</VBox>
