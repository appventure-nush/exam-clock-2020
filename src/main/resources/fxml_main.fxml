<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<SplitPane fx:id="root" dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sg.edu.appventure.examclock.MainController">
    <Pane fx:id="clockRoot">
        <Group fx:id="clockPane" layoutX="400.0" layoutY="400.0">
            <Group fx:id="clockFace">
                <Circle fx:id="clockDisc" radius="200.0" strokeType="OUTSIDE" strokeWidth="2"
                        styleClass="clock-element-empty"/>
            </Group>
            <Group fx:id="hourGroup">
                <Circle fill="TRANSPARENT" opacity="0.0" radius="200.0" smooth="false" stroke="TRANSPARENT"
                        strokeType="INSIDE"/>
                <Polygon fx:id="hourHand" points="-6,12, 0,15, 6,12, 4,-100, 0,-105, -4,-100" strokeType="INSIDE"
                         styleClass="clock-element"/>
            </Group>
            <Group fx:id="minuteGroup">
                <Circle fill="TRANSPARENT" opacity="0.0" radius="200.0" smooth="false" stroke="TRANSPARENT"
                        strokeType="INSIDE" strokeWidth="0.0"/>
                <Polygon fx:id="minuteHand" points="-3.3,20, 0,23, 3.3,20, 2,-150, 0,-155, -2,-150" strokeType="INSIDE"
                         styleClass="clock-element"/>
            </Group>
            <Group fx:id="secondGroup">
                <Circle fill="TRANSPARENT" opacity="0.0" radius="200.0" smooth="false" stroke="TRANSPARENT"
                        strokeType="INSIDE" strokeWidth="0.0"/>
                <Polygon fx:id="secondHand" points="-2,30, 2,30, 1,-170, 0,-175, -1,-170" strokeType="INSIDE"
                         styleClass="clock-element"/>
            </Group>
            <Circle radius="5.0" strokeType="INSIDE" styleClass="clock-element-empty"/>
        </Group>
    </Pane>
    <VBox fx:id="rightPane" alignment="TOP_RIGHT">
        <ToolBar fx:id="toolbar">
            <JFXButton fx:id="addBtn" mnemonicParsing="false" onAction="#addExamClicked" styleClass="primary-raised"
                       text="Add"/>
            <JFXButton fx:id="startBtn" mnemonicParsing="false" text="Start All"/>
            <JFXButton fx:id="stopBtn" mnemonicParsing="false" text="Stop All"/>
            <JFXButton fx:id="settingBtn" mnemonicParsing="false" onAction="#showSettings" text="Settings"/>
            <JFXButton fx:id="connectionBtn" mnemonicParsing="false" onAction="#showConnection" text="Connection"/>
        </ToolBar>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <VBox fx:id="examList"/>
        </ScrollPane>
        <StackPane fx:id="toiletIconParent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                   minWidth="-Infinity" VBox.vgrow="NEVER">
            <children>
                <ImageView fx:id="toiletIcon" cache="true" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@toilet.png"/>
                    </image>
                    <viewport>
                        <Rectangle2D/>
                    </viewport>
                </ImageView>
            </children>
            <VBox.margin>
                <Insets top="-152.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </padding>
        </StackPane>
    </VBox>
</SplitPane>
