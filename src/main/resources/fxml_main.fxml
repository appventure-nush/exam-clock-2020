<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sg.edu.appventure.examclock.MainController">
    <right>
        <VBox BorderPane.alignment="CENTER">
            <ToolBar>
                <items>
                    <Button fx:id="addBtn" mnemonicParsing="false" text="Add"/>
                    <Button fx:id="startBtn" mnemonicParsing="false" text="Start All"/>
                    <Button fx:id="stopBtn" mnemonicParsing="false" text="Stop All"/>
                    <Button fx:id="settingBtn" mnemonicParsing="false" text="Settings"/>
                </items>
            </ToolBar>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0"/>
            </ScrollPane>
        </VBox>
    </right>
    <center>
        <Pane fx:id="clockRoot" BorderPane.alignment="CENTER">
            <Group fx:id="clockPane" layoutX="200.0" layoutY="200.0">
                <Circle fx:id="clockFace" fill="WHITE" radius="200.0" stroke="BLACK" strokeType="INSIDE"/>
                <Group fx:id="hourGroup">
                    <Circle fx:id="clockFace1" fill="TRANSPARENT" radius="200.0" stroke="TRANSPARENT"
                            strokeType="INSIDE"/>
                    <Polygon strokeType="INSIDE" styleClass="clock-element"
                             points="0, -110, 8, -100, -8, -100"/>
                    <Line fx:id="hourHand" endY="-100.0" strokeWidth="5.0" styleClass="clock-element"/>
                </Group>
                <Group fx:id="minuteGroup">
                    <Circle fx:id="clockFace2" fill="TRANSPARENT" radius="200.0" stroke="TRANSPARENT"
                            strokeType="INSIDE" strokeWidth="0.0"/>
                    <Polygon strokeType="INSIDE" styleClass="clock-element"
                             points="0, -170, 5, -160, -5, -160"/>
                    <Line fx:id="minuteHand" endY="-160.0" strokeWidth="3.0" styleClass="clock-element"/>
                </Group>
                <Group fx:id="secondGroup">
                    <Circle fx:id="clockFace3" fill="TRANSPARENT" radius="200.0" stroke="TRANSPARENT"
                            strokeType="INSIDE" strokeWidth="0.0"/>
                    <Polygon strokeType="INSIDE" styleClass="clock-element"
                             points="0, -180, 3, -170, -3, -170"/>
                    <Line fx:id="secondHand" endY="-170.0" styleClass="clock-element"/>
                </Group>
            </Group>
        </Pane>
    </center>
</BorderPane>
